<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.itvillage.dev.offlinerocketapp.ScannerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/getStart"
        android:layout_width="132dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/next"
        android:layout_centerHorizontal="true"
        android:background="@drawable/but_gradient"
        android:text="GEt Started"
        android:textColor="#fff"
        android:visibility="invisible" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#fff"
        android:drawableRight="@drawable/forword"
        android:drawableTint="@color/gradient_start_color"
        android:text="next"
        android:textColor="@color/gradient_start_color" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabInda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/next"
        android:layout_marginLeft="20dp"
        app:tabBackground="@drawable/indecator_selector">

    </android.support.design.widget.TabLayout>


</RelativeLayout>
