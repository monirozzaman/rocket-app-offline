<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"></solid>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" />
            <corners android:bottomLeftRadius="01dp" android:bottomRightRadius="01dp" android:topLeftRadius="05dp" android:topRightRadius="05dp" />
        </shape>
    </item>
</selector>